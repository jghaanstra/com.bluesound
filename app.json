{
	"id": "com.bluesound",
	"sdk": 2,
	"name": {
		"en": "Bluesound",
		"nl": "Bluesound"
	},
	"tags": {
		"en": [ "bluesound", "music" ],
		"nl": [ "bluesound", "muziek" ]
	},
	"version": "1.0.0",
	"compatibility": "1.x >=1.5.0",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com",
		"website": "https://github.com/jghaanstra/android.bluesound"
	},
	"contributing": {
		"donate": {
			"paypal": {
				"username": "jghaanstra"
			}
		}
	},
	"bugs": {
		"url": "https://github.com/jghaanstra/com.bluesound/issues"
	},
	"images": {
		"large": "./assets/images/large.png",
		"small": "./assets/images/small.png"
	},
	"category": "music",
	"description": {
		"en": "Control your Bluesound devices",
		"nl": "Bestuur je Bluesound apparaten"
	},
	"dependencies": {
		"net": "*"
	},
	"drivers": [
		{
			"id": "bluesound",
			"name": {
				"en": "Bluesound",
				"nl": "Bluesound"
			},
			"images": {
				"large": "drivers/bluesound/assets/images/large.jpg",
				"small": "drivers/bluesound/assets/images/small.jpg"
			},
			"class": "speaker",
			"capabilities": [
				"on_off",
                "speaker_playing",
				"speaker_prev",
				"speaker_next",
				"volume_set",
				"volume_mute"
			],
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Bluesound settings",
						"nl": "Bluesound instellingen"
					},
					"children": [
						{
							"id": "address",
							"type": "text",
							"value": "0.0.0.0",
							"label": {
								"en": "IP Address",
								"nl": "IP adres"
							}
						},
						{
							"id": "port",
							"type": "number",
							"value": 11000,
							"step": 1,
							"label": {
								"en": "Port",
								"nl": "Poort"
							}
						},
						{
							"id": "polling",
							"type": "number",
							"value": 4,
							"step": 1,
							"attr": {
								"min": 4,
								"max": 3600
							},
							"label": {
								"en": "Polling",
								"nl": "Polling"
							}
						}
					]
				}
			]
		}
	],
	"flow": {
		"actions": [
			{
				"id": "emailsnapshot",
				"title": {
					"en": "Email live snapshot",
					"nl": "Email live snapshot"
				},
				"hint": {
					"en": "Take a snapshot and send it with email (make sure email is configured in the app settings).",
					"nl": "Maak een  snapshot en verstuur deze per email (zorg ervoor dat email is geconfigureerd in de app instellingen)."
				},
				"args": [
					{
						"name": "mailto",
						"type": "text",
						"placeholder": {
							"en": "Send mail to",
							"nl": "Verstuur mail aan"
						}
					},
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select IP Webcam",
							"nl": "Selecteer IP Webcam"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
            {
				"id": "sensor_threshold",
				"title": {
					"en": "Motion or sound threshold",
					"nl": "Beweging of geluid drempel"
				},
				"hint": {
					"en": "Set the motion or sound threshold that triggers the alarm. Lower threshold will trigger the alarm faster.",
					"nl": "Stel de beweging of geluid drempel in voor het triggeren van het alarm. Een lage drempel zal het alarm eerder triggeren"
				},
				"args": [
					{
						"name": "sensor_type",
						"type": "dropdown",
						"values": [
							{
								"id": "motion",
								"label": {
									"en": "Motion",
									"nl": "Beweging"
								}
							},
							{
								"id": "sound",
								"label": {
									"en": "Sound",
									"nl": "Geluid"
								}
							}
						]
					},
					{
						"name": "threshold",
						"type": "number",
						"min": 1,
						"max": 1000,
						"steps": 1,
						"placeholder": {
							"en": "Threshold (1 - 1000)",
							"nl": "Drempel (1 - 1000)"
						}
					},
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select IP Webcam",
							"nl": "Selecteer IP Webcam"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
			{
				"id": "nightvision",
				"title": {
					"en": "Swith night vision",
					"nl": "Nachtvisie schakelen"
				},
				"hint": {
					"en": "Switch the nightvision and set the gain",
					"nl": "Schakekel de nachtvisie  en stel de sterkte in"
				},
				"args": [
					{
						"name": "nightvision",
						"type": "dropdown",
						"values": [
							{
								"id": "on",
								"label": {
									"en": "On",
									"nl": "Aan"
								}
							},
							{
								"id": "off",
								"label": {
									"en": "Off",
									"nl": "Uit"
								}
							}
						]
					},
					{
						"name": "nightvision_gain",
						"type": "number",
						"min": 0.25,
						"max": 60,
						"steps": 0.25,
						"placeholder": {
							"en": "Gain (0.25 - 60)",
							"nl": "Sterkte (0.25 - 60)"
						}
					},
					{
						"name": "nightvision_exposure",
						"type": "number",
						"min": 1,
						"max": 20,
						"steps": 1,
						"placeholder": {
							"en": "Exposure (1 - 20)",
							"nl": "Belichting (1 - 20)"
						}
					},
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select IP Webcam",
							"nl": "Selecteer IP Webcam"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
			{
				"id": "zoom",
				"title": {
					"en": "Zoom",
					"nl": "Zoom"
				},
				"args": [
					{
						"name": "zoom",
						"type": "range",
						"min": 1,
						"max": 99,
						"steps": 1,
						"label": "x",
						"labelMultiplier": 1,
						"labelDecimals": 0
					},
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select IP Webcam",
							"nl": "Selecteer IP Webcam"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
			{
				"id": "quality",
				"title": {
					"en": "Stream Quality",
					"nl": "Stream kwaliteit"
				},
				"args": [
					{
						"name": "quality",
						"type": "range",
						"min": 1,
						"max": 100,
						"steps": 1,
						"label": "%",
						"labelMultiplier": 1,
						"labelDecimals": 0
					},
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select IP Webcam",
							"nl": "Selecteer IP Webcam"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
			{
				"id": "led",
				"title": {
					"en": "Switch the LED",
					"nl": "LED schakelen"
				},
				"args": [
					{
						"name": "led",
						"type": "dropdown",
						"values": [
							{
								"id": "on",
								"label": {
									"en": "On",
									"nl": "Aan"
								}
							},
							{
								"id": "off",
								"label": {
									"en": "Off",
									"nl": "Uit"
								}
							}
						]
					},
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select IP Webcam",
							"nl": "Selecteer IP Webcam"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
			{
				"id": "whichcamera",
				"title": {
					"en": "Switch camera",
					"nl": "Camera switchen"
				},
				"args": [
					{
						"name": "whichcamera",
						"type": "dropdown",
						"values": [
							{
								"id": "on",
								"label": {
									"en": "Front-facing Camera",
									"nl": "Front-facing camera"
								}
							},
							{
								"id": "off",
								"label": {
									"en": "Back-facing Camera",
									"nl": "Back-facing camera"
								}
							}
						]
					},
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select IP Webcam",
							"nl": "Selecteer IP Webcam"
						},
						"filter": "driver_id=bluesound"
					}
				]
			}
		]
	}
}
